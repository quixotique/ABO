#!/usr/bin/perl -w

require 5;
use lib '/home/andrewb/lib';
use lib '/home/andrewb/ABO/lib';

use ABO;

($Myname = $0) =~ s!.*/!!o;

my $abo = new ABO(
	-error => sub { print STDERR "$Myname: ", @_, "\n"; }
)
	or exit 1;

my $acc = $abo->account_list;
for $ac (sort { $a->name cmp $b->name } $acc->accounts)
{
	printf "%-20s %s\n", $ac->name,
		($ac->is_profit ? ' ' : 'A').
		' '.
		'"'.$ac->title.'"';
}

#!/usr/bin/perl -w

use lib '/home/andrewb/ABO/lib';
use ABO::Date;

if (@ARGV)
{
	$d = ABO::Date->new($ARGV[0], $ARGV[1] || 'en') or print("undef\n"), exit 0;
	print "<$d>\n";
	print '~ ', ~$d, "\n";
	print '%e ', $d->format('%e'), "\n";
	print '%D ', $d->format('%D'), "\n";
	print '%a %-d-%b-%Y ', $d->format('%a %-d-%b-%Y'), "\n";
	print '%A %-d %B %Y ', $d->format('%A %-d %B %Y'), "\n";
	print 'yearday ', $d->yearday, "\n";
	print '%U ', $d->format('%U'), "\n";
	print '%W ', $d->format('%W'), "\n";
	print 'eq "." ', $d eq '.', "\n";
	exit 0;
}

for my $y (1900, 1950, 1970, 1980, 1990, 2000, 2010, 2020, 2030)
{
	my $date = sprintf('1/1/%04u', $y);
	print "$date\t";
	$d = ABO::Date->new($date, 'en') or print("undef\n"), exit 0;
	print ~$d, "\n";
}
